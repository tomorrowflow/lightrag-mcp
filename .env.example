# LightRAG API Configuration
LIGHTRAG_API_HOST="localhost"
LIGHTRAG_API_PORT=9621
LIGHTRAG_API_KEY="your-LightRAG-api-key-here"

# HTTP Transport Configuration (for standalone HTTP deployment)
MCP_HOST="0.0.0.0"
MCP_PORT=3000
TRANSPORT_MODE="http"
STATEFUL_MODE="true"
EVENT_RETENTION_HOURS=24
MAX_EVENTS_PER_SESSION=1000
CORS_ORIGINS="*"
SESSION_TIMEOUT_MINUTES=30

# Security Configuration
ENABLE_AUTH=false
API_KEY=""
BEARER_TOKEN_SECRET=""
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
MAX_REQUEST_SIZE_MB=10
ENABLE_SECURITY_HEADERS=true
ENVIRONMENT="development"
REQUEST_TIMEOUT_SECONDS=30
LOG_LEVEL="INFO"
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS="GET,POST,DELETE,OPTIONS"
CORS_ALLOW_HEADERS="*"
CORS_EXPOSE_HEADERS="Mcp-Session-Id"
CORS_MAX_AGE=86400